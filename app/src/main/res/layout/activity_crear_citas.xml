<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crear_citas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.evidencia.godhc.CitasMedicas.Crear_citas">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="15dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Escoger Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        android:id="@+id/btn_date"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA" />

    <Button
        android:text="Escoger hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:id="@+id/btn_time"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA" />

    <TextView
        android:text="Ingrese Nombre:"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/nombre"
        android:textSize="20sp"
        android:layout_below="@+id/btn_date"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/nombre"
        android:layout_toEndOf="@+id/btn_date"
        android:id="@+id/edit_name" />

    <TextView
        android:text="Ingrese Apellido:"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:id="@+id/apellido"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/edit_name"
        android:layout_toEndOf="@+id/apellido"
        android:layout_marginTop="9dp"
        android:id="@+id/edit_apellido" />

    <Button
        android:text="Agendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_apellido"
        android:layout_alignStart="@+id/logo"
        android:layout_marginStart="63dp"
        android:layout_marginTop="7dp"
        android:id="@+id/btn_agendar"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA" />

</RelativeLayout>
