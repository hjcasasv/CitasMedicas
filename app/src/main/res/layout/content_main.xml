<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.evidencia.godhc.CitasMedicas.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Bienvenida de vuelta doctora!"
        android:id="@+id/bienvenida"
        android:textSize="45sp"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_below="@+id/logo2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hoy tienes 6 citas programadas"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="36dp"
        android:id="@+id/num_citas"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_below="@+id/bienvenida"
        android:layout_alignStart="@+id/logo2" />

    <Button
        android:text="Ir a pacientes"
        android:id="@+id/btn_pacientes"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA"
        android:layout_alignBaseline="@+id/btn_citas"
        android:layout_alignBottom="@+id/btn_citas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <Button
        android:text="Ir a citas"
        android:id="@+id/btn_citas"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA"
        android:layout_below="@+id/num_citas"
        android:layout_alignEnd="@+id/logo2" />

    <Button
        android:text="Ir a recetas"
        android:id="@+id/btn_recteas"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:background="@drawable/agenda"
        android:textColor="#FAFAFA"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/num_citas"
        android:layout_marginStart="39dp" />

</RelativeLayout>
