<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="info.godhc.CitasMedicas.view.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo2"
        android:text="Bienvenida de vuelta doctora!"
        android:textColor="#000000"
        android:textSize="45sp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="234dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp" />

    <Button
        android:id="@+id/btn_pacientes"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/datePicker"
        android:layout_marginBottom="65dp"
        android:background="@drawable/agenda"
        android:elevation="0dp"
        android:text="Notas"
        android:textColor="#FAFAFA" />

    <Button
        android:id="@+id/btn_citas"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_pacientes"
        android:layout_marginEnd="50dp"
        android:background="@drawable/agenda"
        android:elevation="0dp"
        android:text="Citas"
        android:textColor="#FAFAFA" />

</RelativeLayout>
